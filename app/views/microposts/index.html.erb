<p id="notice"><%= notice %></p>

<h2><%= link_to 'Users', users_path %></h2>

<h1>Microposts</h1>

<%= link_to 'New Micropost', new_micropost_path %>
<style>
table, td {
    border: 1px solid black;
}
</style>
<table>
  <thead>
    <tr>
      <th colspan="1">Content</th>
      <th>Created</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.reverse_each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.created_at %></td>
        <td><%= link_to User.find(micropost.user_id).name,
        User.find(micropost.user_id) %></td>
        <td><%= link_to 'Show', micropost %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
