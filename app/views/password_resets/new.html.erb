<h3>Forgot password</h3>

<div class="col-md-6 col-md-offset-3">
  <div class="center row">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'field' %>
      <div class="actions">
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  </div>
</div>
