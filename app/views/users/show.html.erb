<p id="notice"><%= notice %></p>

<h1><%= @user.name %></h1>

<h4><%= mail_to @user.email, @user.email %></h4>

<% if @microposts.any? %>
  <h3>Microposts (<%= @user.microposts.count %>)</h3>
  <ol class="microposts">
    <%= render @microposts %>
  </ol>
<% else %>
  <h3>No microposts.</h3>
<% end %>
