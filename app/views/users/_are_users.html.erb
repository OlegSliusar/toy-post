<h1>Users</h1>

<%#= will_paginate %>

<div class="users">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <body>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <% if !current_user.nil? && current_user.admin? && !current_user?(user) %>
        <td>
           | <%= link_to "delete", user, method: :delete,
                                         data: { confirm: "You sure?" } %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </body>
</table>
</div>
<%#= will_paginate %>
